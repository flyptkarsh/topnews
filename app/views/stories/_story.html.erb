<div class="card"> 
  <div class="card-body">
    <h5 class="card-title"><%=s.title%></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%=s.by%></h6>
    <p class="card-text"><%=time_ago_in_words(s.published_at)%> ago</p>
    <%= link_to "Read Story", s.link, html_options: { class: "card-link", target: '_blank' }%> 
  </div> 
</div>